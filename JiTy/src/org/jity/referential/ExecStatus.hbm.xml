<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="org.jity.referential">

    <class name="ExecStatus" table="EXEC_STATUS">
        <id name="id" type="long">
        	<column name="ID" not-null="true" unique="true" index="PK_EXEC_STATUS" />  
            <generator class="increment"/>
        </id>
        <property name="execDate" not-null="true" type="timestamp" column="DATE"/>
        <property name="begin" not-null="true" type="timestamp" column="BEGIN"/>
        <property name="end" type="timestamp" column="END"/>
        <property name="status" column="STATUS"/>
		<many-to-one name="job" not-null="true" column="JOB_ID" cascade="all"/>
        <property name="statusMessage" column="STATUS_MESSAGE"/>
        <property name="logFile" column="LOG_FILE"/>
	</class>


</hibernate-mapping>
